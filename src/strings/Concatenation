package strings;

public class Concatenation {

	public static void main(String[] args) {

		String driverFirstName = "Hamish";
		String driverLastName = "Blake";
		
		String driverFullName = driverFirstName + " " + driverLastName;
		System.out.println("The drivers name is: " + driverFullName);
		
		
		String feeling = "Love"; 	String language = "java";
		feeling = feeling.toLowerCase(); language = language.toUpperCase();
		
		System.out.println("I " + feeling + " " + language);
		
		
	}
		
	}


