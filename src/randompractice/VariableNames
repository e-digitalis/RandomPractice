package randompractice;

public class VariableNames {

	public static void main(String[] args) {

		System.out.println("use lowerCamelCase qwhen creating a variable name");
		System.out.println("https://classroom.udacity.com/courses/ud282/lessons/8193672240/concepts/82236134510923");
		
		
		System.out.println("there is also UpperCamelCase");
		System.out.println("both are used frequently in Java, but in different places");

		
		System.out.println("things to remember about varnames");
		System.out.println("1. case sensitive");
		System.out.println("2. must start variable names with a letter - dollar sign and underscore are accepted but not recommended");
		System.out.println("3. NO WHITE SPACES");
		
		
	}

}
