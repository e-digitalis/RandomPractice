package excercises;

public final class Loops {

	public static void main(String[] args) {

		int x = 7;
		int y = 0;

	      while( x > 0 ) {
	         System.out.println("Loop x: " + x );
	         x--;
	         }
	      
	      while( x <= 7 ) {
		         System.out.println("Loop x: " + x );
		         x++;
		         
		      }
	      

	      while( y <= 7 ) {
		         System.out.println("Loop y: " + y );
		         y++;
		         
		      }
	      
	}

}
