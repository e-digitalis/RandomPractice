package excercises;

public class LoopChristmasTreePrep {

	public static void main(String[] args) {

		System.out.println("*");
		System.out.println("***");
		System.out.println("*****");
		System.out.println("*******");

		int Lines = 8;

		for (int count = 1; count <= Lines; count++) {
			System.out.println("*");
		}

	}

}
